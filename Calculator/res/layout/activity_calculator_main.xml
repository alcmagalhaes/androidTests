<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalculatorMain" >

    <TableRow
		android:id="@+id/txtRow"         
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ccddee"
        >
	    <EditText
	        android:id="@+id/txtDisplay"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:ems="10"
	        android:layout_span="3"
	        android:inputType="number"
	        android:layout_weight="1"
	        >
	        <requestFocus/>
	    </EditText>        
    </TableRow>
    
	<TableRow
		android:id="@+id/firstBtnRow"	     
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ccddee"
        android:layout_weight="1"
        >
        
	    <Button
	    	android:id="@+id/btn7"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_weight="0.25"
			android:background="#dddccc"
			android:layout_marginLeft="3dp"
	    	android:text="7"
	    	/>
	    <Button
	    	android:id="@+id/btn8"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="8"
		    />
	   	<Button
	    	android:id="@+id/btn9"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="9"
		    />	 
	   	<Button
	    	android:id="@+id/btnDiv"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="/"
		    />	   	    
    </TableRow> 

	<TableRow 
	    android:id="@+id/secondBtnRow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ccddee"
        android:layout_weight="1"
        >
        
	    <Button
	    	android:id="@+id/btn4"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_weight="0.25"
			android:background="#dddccc"
			android:layout_marginLeft="3dp"
	    	android:text="4"
	    	/>
	    <Button
	    	android:id="@+id/btn5"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="5"
		    />
	   	<Button
	    	android:id="@+id/btn6"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="6"
		    />	 
	   	<Button
	    	android:id="@+id/btnMult"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="x"
		    />	   	    
    </TableRow> 	

	<TableRow 
	    android:id="@+id/thirdBtnRow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ccddee"
        android:layout_weight="1"
        >
        
	    <Button
	    	android:id="@+id/btn1"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_weight="0.25"
			android:background="#dddccc"
			android:layout_marginLeft="3dp"
	    	android:text="1"
	    	/>
	    <Button
	    	android:id="@+id/btn2"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="2"
		    />
	   	<Button
	    	android:id="@+id/btn3"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="3"
		    />	 
	   	<Button
	    	android:id="@+id/btnMinus"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="-"
		    />	   	    
    </TableRow> 	

	<TableRow
	    android:id="@+id/fourthBtnRow" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ccddee"
        android:layout_weight="1"
        >
        
	    <Button
	    	android:id="@+id/btn0"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_weight="0.25"
			android:background="#dddccc"
			android:layout_marginLeft="3dp"
	    	android:text="0"
	    	/>
	    <Button
	    	android:id="@+id/btnDot"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="."
		    />
	   	<Button
	    	android:id="@+id/btnPercent"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="%"
		    />	 
	   	<Button
	    	android:id="@+id/btnPlus"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.25"
	    	android:background="#dddccc"
	    	android:layout_marginLeft="3dp"
	    	android:text="+"
		    />	   	    
    </TableRow> 	

	<TableRow
	    android:id="@+id/fifthBtnRow" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ccddee"
        android:layout_weight="1"
        >
        
	    <Button
	    	android:id="@+id/btnEquals"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="#dddccc"
			android:layout_marginLeft="3dp"
	    	android:text="="
	    	/>
   	    
    </TableRow> 		
				
</TableLayout>
