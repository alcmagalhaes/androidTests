	    	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0.25"
			android:layout_marginLeft="3dp"
			android:onClick="setNumber"
	    	/>	    
	    <Button
	    	android:id="@+id/btnLB"
	    	style="@style/btnStyleBlackpearl"
	    	android:text="@string/LB"
